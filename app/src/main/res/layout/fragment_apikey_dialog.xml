<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="250dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/api_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/modify_api_key_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_guideline_vertical_0.9"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="@+id/dialog_guideline_vertical_0.1"
        app:layout_constraintTop_toTopOf="@+id/dialog_guideline_horizontal_0.1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/api_key_textinput"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:hint="@string/api_key_hint"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/dialog_guideline_vertical_0.9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_guideline_vertical_0.1"
        app:layout_constraintTop_toBottomOf="@+id/api_dialog_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_button_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        style="@style/NegativeButtonStyle"
        android:layout_marginTop="40dp"
        android:singleLine="true"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/dialog_guideline_vertical_0.5"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/dialog_guideline_vertical_0.1"
        app:layout_constraintTop_toBottomOf="@+id/api_key_textinput" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_button_apply"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:singleLine="true"
        style="@style/PositiveButtonStyle"
        android:text="OK"
        app:layout_constraintEnd_toStartOf="@+id/dialog_guideline_vertical_0.9"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/dialog_guideline_vertical_0.5"
        app:layout_constraintTop_toTopOf="@+id/dialog_button_cancel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_guideline_horizontal_0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_guideline_vertical_0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_guideline_vertical_0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_guideline_vertical_0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>