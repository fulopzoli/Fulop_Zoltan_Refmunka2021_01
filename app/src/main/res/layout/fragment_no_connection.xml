<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/Crayola_Blue">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/noConnectionImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_signal_wifi_connected_no_internet_4_24"
        app:layout_constraintBottom_toTopOf="@+id/no_iternet_textview"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_no_internet_50"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_no_internet_50" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/no_iternet_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_internet"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_no_internet_50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_no_internet_50"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_no_internet_50"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_no_internet_50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_no_internet_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_no_internet_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


</androidx.constraintlayout.widget.ConstraintLayout>